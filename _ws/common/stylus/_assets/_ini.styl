@require "_variable.styl"

$clear-fix
  clear: both
  &:after
    display: block
    clear: both
    content: ""
    zoom: 1

$set-br
  content: "\A"
  white-space: pre

font-size-calc($target, $parent = $_px_def, $unit = unquote('em'))
  if $unit == '%'
    return unit((round(($target / $parent) * 100, 3)), $unit)
  else
    return unit((round(($target / $parent), 3)), $unit)