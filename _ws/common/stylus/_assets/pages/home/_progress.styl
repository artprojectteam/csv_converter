.progress
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  background: rgba(#000000, 0.9)
  transition: all $ease_delay_default $E_easeInOutBack
  &[aria-hidden="true"]
    transform: translate(0, 100%)
  &[aria-hidden="false"]
    transform: translate(0, 0)

  &-container
    position: relative
    padding: $_space
  &-bar
    width: 100%
    height: $_space
    background: #fff

  &-text
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    margin: auto
    width: 100%
    height: 1em
    color: #999999
    text-align: center
    font-weight: 700
    font-size: font-size-calc(20)